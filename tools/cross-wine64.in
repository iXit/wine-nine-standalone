[binaries]
c = 'winegcc'
ar = 'ar'
strip = 'strip'
pkgconfig = '@PKG_CONFIG@'

# This throws a deprecation warning, but fixing that breaks CI
[properties]
c_args = ['-m64']
c_link_args = ['-m64', '-mwindows', '-L@WINE64_LIBDIR@']
needs_exe_wrapper = true
pe_dir = 'x86_64-windows'
so_dir = 'x86_64-unix'

[host_machine]
system = 'linux'
cpu_family = 'x86_64'
cpu = 'x86_64'
endian = 'little'
